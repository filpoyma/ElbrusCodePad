<div class="container py-5">
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-6 mx-auto">

                    <!-- form card login -->
                    <div class="card rounded-0">
                        <div class="card-header">
                            <h4 class="mb-0 text-center">SignUp to ElbrusPad</h4>
                        </div>
                        <div class="card-body">
                            <form class="form" role="form" id="formLogin" novalidate="" method="POST" action="/signup">
                                <div class="form-group">
                                    <label for="uname1">Username</label>
                                    <input type="text" class="form-control form-control-lg rounded-0" id="uname1" name="name" required="">
                                </div>
                                <div class="form-group">
                                    <label for="email1"> Email</label>
                                    <input type="email" class="form-control form-control-lg rounded-0" id="email1" name="email" required="">
                                </div>
                                <div class="form-group">
                                    <label for="password1">Password</label>
                                    <input type="password" class="form-control form-control-lg rounded-0" id="password1" name="password" required="">
                                </div>

                                    <span class="text-warning">{{regerror}}</span>

                                <button type="submit" class="btn btn-success btn-lg float-right" id="btnLogin">Signup</button>
                            </form>
                        </div>
                        <!--/card-block-->
                    </div>
                    <!-- /form card login -->

                </div>


            </div>
            <!--/row-->

        </div>
        <!--/col-->
    </div>
    <!--/row-->
</div>
<!--/container-->